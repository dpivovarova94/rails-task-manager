<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= if @task.completed then "task completed" else "task not completed" end %></p>
<%= link_to "back to the list", tasks_path%> <br>
<%= link_to "edit task", edit_task_path(@task) %> <br>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
